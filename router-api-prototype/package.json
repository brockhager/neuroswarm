{
  "name": "router-api-prototype",
  "version": "0.1.0",
  "description": "Router API prototype (tests + CI scripts)",
  "type": "module",
  "dependencies": {
    "jose": "^5.0.0"
  },
  "scripts": {
    "start": "node server.js",
