{
    "name": "neuroswarm-desktop",
    "version": "0.1.3.1",
    "description": "NeuroSwarm Desktop - Your Personal AI Assistant",
    "main": "main.js",
    "author": "NeuroSwarm Team",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "postinstall": "electron-builder install-app-deps",
        "build": "electron-builder --win --publish never",
        "build:all": "electron-builder -mwl --publish never"
    },
    "build": {
        "appId": "com.neuroswarm.desktop",
        "productName": "NeuroSwarm",
        "copyright": "Copyright Â© 2025 NeuroSwarm Team",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "../ns-node",
                "to": "app/ns-node",
                "filter": [
                    "**/*",
                    "!node_modules"
                ]
            },
            {
                "from": "../shared",
                "to": "app/shared"
            },
            {
                "from": "../sources",
                "to": "app/sources"
            },
            {
                "from": "../scripts",
                "to": "app/scripts"
            }
        ],
        "win": {
            "target": "portable",
            "icon": "icon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "icon.png"
        }
    },
    "dependencies": {
        "express": "^4.18.2",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "uuid": "^9.0.0",
        "node-fetch": "^3.3.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-rebuild": "^3.2.9"
    }
}