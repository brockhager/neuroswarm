# Environment Configuration Template
# Copy this file to .env and configure for your environment

# NS Node Configuration
PORT=3009
NODE_ENV=production

# NS-LLM Backend
NS_LLM_URL=http://localhost:8080
MODEL_PATH=./NS-LLM/models

# Model Configuration
DEFAULT_MODEL=gpt2
MAX_TOKENS=200

# Governance Configuration
GOVERNANCE_MIN_TOKENS=5
GOVERNANCE_MAX_TOKENS=500
GOVERNANCE_MIN_COHERENCE=0.3
GOVERNANCE_STRICT_MODE=false

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Logging
LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3010,http://localhost:3000

# --- OPS-04: PRODUCTION SECRETS ---

# Gateway JWT Secret (min 32 chars)
JWT_SECRET=<CHANGE_ME_32_CHAR_RANDOM_STRING>
# Generate with: openssl rand -hex 32

# Admin Node Secrets
ADMIN_JWT_SECRET=<CHANGE_ME_32_CHAR_RANDOM_STRING>
SESSION_SECRET=<CHANGE_ME_32_CHAR_RANDOM_STRING>

# Grafana Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# CORS for Production (Gateway)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
# Production: CORS_ORIGIN=https://app.neuroswarm.ai,https://dashboard.neuroswarm.ai

# Redis Connection (if external)
REDIS_URL=redis://localhost:6379

# Optional: External Services
# IPFS_API_URL=http://ipfs:5001
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Optional: HuggingFace Token (for Llama-2 and other supported models)
# HF_TOKEN=your_token_here
